@{
  Layout = "_Layout";
}

@using RecipeBox.Models
@model RecipeBox.Models.Recipe

<h2>Recipe Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.RecipeName): @Html.DisplayFor(model => model.RecipeName)</h3>
<h3>@Html.DisplayNameFor(model => model.RecipeInstructions): @Html.DisplayFor(model => model.RecipeInstructions)</h3>  
<h3>@Html.DisplayNameFor(model => model.RecipeRating): @Html.DisplayFor(model => model.RecipeRating)</h3>  

@if(@Model.IngredientRecipeJoinEntities.Count == 0)
{
  <p>This recipe does not have any any ingredients</p>
}
else
{
  <h4>This recipe has the following ingredients:</h4>
  <ul>
  @foreach(IngredientRecipe join in Model.IngredientRecipeJoinEntities)
  {
    <li>@join.Ingredient.IngredientName</li>
    @using (Html.BeginForm("DeleteJoin", "Ingredients"))
    {
      @Html.Hidden("joinId", @join.IngredientRecipeId)
      <input type="submit" value="Delete"/>
    }
  }
  </ul>
}

@if(@Model.RecipeTagJoinEntities.Count == 0)
{
  <p>This recipe does not have any any tags</p>
}
else
{
  <h4>This recipe has the following tags</h4>
  <ul>
  @foreach(RecipeTag join in Model.RecipeTagJoinEntities)
  {
    <li>@join.Tag.TagName</li>
    @using (Html.BeginForm("DeleteJoin", "Tags"))
    {
      @Html.Hidden("joinId", @join.RecipeTagId)
      <input type="submit" value="Delete"/>
    }
  }
  </ul>
}

<p>@Html.ActionLink("Back to list", "Index")</p>
<p>@Html.ActionLink("Add an Ingredient", "AddIngredient", new { id = Model.RecipeId })</p>
<p>@Html.ActionLink("Add a Tag", "AddTag", new { id = Model.RecipeId })</p>
<p>@Html.ActionLink("Edit Recipe", "Edit", new { id = Model.RecipeId })</p>
<p>@Html.ActionLink("Delete Recipe", "Delete", new { id = Model.RecipeId })</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>