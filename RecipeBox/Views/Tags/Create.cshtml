@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Tag

<h4>Add a New Tag</h4>
<p>@Html.ValidationMessageFor(model => model.TagName, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.TagName, "Tag Name", new { @class = "form-label"})
    @Html.TextBoxFor(model => model.TagName, new { @class = "form-control"})

    <input type="submit" value="Add new tag" class="btn btn-default" />
}
<hr>
<p>@Html.ActionLink("Show all Tags", "Index")</p>