@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Ingredient

<h2>Edit Ingredient</h2>

<h4>Edit this Ingredient: @Html.DisplayFor(model => model.IngredientName)</h4>

@using (Html.BeginForm())
{
