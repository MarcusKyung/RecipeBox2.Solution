@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Ingredient

<h2>Edit Ingredient</h2>

<h4>Edit this Ingredient: @Html.DisplayFor(model => model.IngredientName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.IngredientId)

    @Html.LabelFor(model => model.IngredientName, "Ingredient Name", new { @class = "form-label" })
    @Html.EditorFor(model => model.IngredientName, new { htmlAttributes = new { @class = "form-control" } })
    <br>
    <input type="submit" value="Save" class="btn btn buttongroup-lower"/>
}
<hr>
<div class="btn-group" role="group">
  <button class="btn buttongroup-lower">@Html.ActionLink("Back to List", "Index")</button>
  <button class="btn buttongroup-lower">@Html.ActionLink("Home", "Index", "Home")</button>
</div>