@{
  Layout = "_Layout";
}

@using RecipeBox.Models;
<hr>
<h1>Ingredients</h1>
<hr>

@if (@Model.Count == 0)
{
  <h3>No ingredients have been added yet!</h3>
} 
else
{
  <div class="row row-cols-2">
    @foreach (Ingredient ingredient in Model)
    {
      <div class="col">
        <div class="card ingredient-card">
          <div class="card-body">
            <h5 class="card-title ingredient-title">@Html.ActionLink($"{ingredient.IngredientName}", "Details", new { id = ingredient.IngredientId })</h5>
          </div>
        </div>
      </div>
    }
  </div>
}

<div class="btn-group" role="group">
  <button class="btn buttongroup-lower">@Html.ActionLink("Add New Ingredient", "Create")</button>
  <button class="btn buttongroup-lower">@Html.ActionLink("Home", "Index", "Home")</button>
</div>